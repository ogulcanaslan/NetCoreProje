@model IEnumerable<NetCoreProje.Models.Personel>

@{
    ViewData["Title"] = "Index";
}

<h1>Personel</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-danger">Ekle</a>
</p>
<table class="table table-striped">
    <thead class="table-danger">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AdSoyad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Maas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReyonNo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AdSoyad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Maas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReyonNo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PersonelNo">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PersonelNo">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PersonelNo">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
